# Zenith PDF Chatbot Configuration

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
PREFERRED_CHAT_MODEL=gpt-4o-mini
PREFERRED_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Configuration (Cloud)
QDRANT_MODE=cloud
QDRANT_CLOUD_URL=your-qdrant-cloud-url
QDRANT_CLOUD_API_KEY=your-qdrant-api-key

# Qdrant Configuration (Local) - Uncomment for local setup
# QDRANT_MODE=local
# QDRANT_URL=localhost
# QDRANT_PORT=6333

# Collection Names
QDRANT_COLLECTION_NAME=zenith_documents
QDRANT_USERS_COLLECTION=zenith_users

# Ollama Configuration (Optional)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434

# Application Settings
APP_PORT=8505
DEBUG_MODE=false
LOG_LEVEL=INFO

# Authentication
ENABLE_AUTH=true
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
ALLOW_USER_REGISTRATION=true
REQUIRE_ADMIN_APPROVAL=false
SESSION_DURATION_HOURS=24

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=5
MAX_FILE_SIZE_MB=50

# MinIO Configuration (Optional - for bulk document processing)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=documents
MINIO_SECURE=false
